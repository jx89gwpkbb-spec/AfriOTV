{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the user's profile photo."
        }
      },
      "required": ["displayName", "email"]
    },
    "WatchlistItem": {
        "title": "Watchlist Item",
        "description": "Represents an item in a user's watchlist.",
        "type": "object",
        "properties": {
            "contentId": {
                "type": "string",
                "description": "The ID of the content."
            },
            "addedAt": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp when the item was added."
            }
        },
        "required": ["contentId", "addedAt"]
    },
    "Content": {
        "title": "Content",
        "description": "Represents a movie or TV show available on the platform.",
        "type": "object",
        "properties": {
            "title": { "type": "string", "description": "The title of the content." },
            "type": { "type": "string", "enum": ["movie", "tv"], "description": "The type of content." },
            "description": { "type": "string", "description": "A brief synopsis of the content." },
            "posterPath": { "type": "string", "format": "uri", "description": "URL for the poster image." },
            "coverPath": { "type": "string", "format": "uri", "description": "URL for the cover/backdrop image." },
            "videoUrl": { "type": "string", "format": "uri", "description": "URL for the video file to be played." },
            "genres": { "type": "array", "items": { "type": "string" }, "description": "An array of genres." },
            "cast": { "type": "array", "items": { "type": "string" }, "description": "An array of main cast members." },
            "rating": { "type": "number", "description": "The content's original rating (e.g., from an external source)." },
            "duration": { "type": "string", "description": "The runtime or number of episodes." },
            "releaseYear": { "type": "number", "description": "The year the content was released." },
            "isTrending": { "type": "boolean", "description": "Whether the content is currently trending." },
            "createdAt": { "type": "string", "format": "date-time", "description": "The timestamp when the content was added." }
        },
        "required": ["title", "type", "description", "posterPath", "coverPath", "videoUrl", "genres", "cast", "rating", "duration", "releaseYear", "createdAt"]
    },
    "Review": {
      "title": "Review",
      "description": "A user review and rating for a piece of content.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who wrote the review."
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user at the time of review."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The profile photo URL of the user at the time of review."
        },
        "rating": {
          "type": "number",
          "description": "The star rating from 1 to 5."
        },
        "comment": {
          "type": "string",
          "description": "The text content of the review."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the review was submitted."
        }
      },
      "required": ["userId", "displayName", "rating", "comment", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/watchlist/{watchlistItemId}": {
        "schema": {
            "$ref": "#/entities/WatchlistItem"
        },
        "description": "Stores the user's watchlist items."
    },
    "/content/{contentId}": {
        "schema": {
            "$ref": "#/entities/Content"
        },
        "description": "Stores all movie and TV show content available on the platform."
    },
    "/content/{contentId}/reviews/{reviewId}": {
      "schema": {
        "$ref": "#/entities/Review"
      },
      "description": "Stores user reviews for a specific piece of content."
    }
  }
}
